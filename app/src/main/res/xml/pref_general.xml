<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/setting_location_title"
        android:summary="@string/setting_location_summary"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        />

    <ListPreference
        android:title="@string/setting_unit_title"
        android:key="@string/pref_unit_key"
        android:defaultValue="@string/pref_unit_metric"
        android:entryValues="@array/pref_unit_values"
        android:entries="@array/pref_unit_options"
        />
</PreferenceScreen>